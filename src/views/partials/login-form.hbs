<form action="/login" method="POST" class="col s6 offset-s3">
  <div class="row">
    <div class="input-field">
      <i class="material-icons prefix">perm_identity</i>
      <input placeholder="user name" id="userName" type="text" name=user[userName]>
    </div>
  </div>
  <div class="row">
    <div class="input-field">
      <i class="material-icons prefix">lock_outline</i>
      <input placeholder="password" id="password" type="password" class="validate" name=user[password]>
    </div>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">sign in
    <i class="material-icons right">send</i>
  </button>
  {{#if error}}
    <label>{{error}}</label>
  {{/if}}
</form>
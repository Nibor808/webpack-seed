  <div class="row">
    <form action="/login" method="POST" class="col s6 offset-s3">
      <div class="row">
        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <input placeholder="email" id="email" type="email" class="validate" name=user[email]>
          <label for="email" data-error="please enter a properly formatted email address"></label>
        </div>
      </div>
      <div class="row">
        <div class="input-field">
          <i class="material-icons prefix">lock</i>
          <input placeholder="password" id="password" type="password" class="validate" name=user[password]>
        </div>
      </div>
      <button class="btn waves-effect" type="submit" name="action">sign in
        <i class="tiny material-icons right">send</i>
      </button>
    </form>
  </div>